<div class="container">
  <div class="row">
   <div class="col-md-3">
  <%= render "books/share", user: @user, book: @book %>
   </div>
   
   <div class="col-md-8 offset-md-1">

<h1>Users</h1>

<body>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
           <%= image_tag user.get_profile_image(100,100) %>
          <% end %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
