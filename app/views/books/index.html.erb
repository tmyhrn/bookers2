<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
   <div class="col-md-3">
<%= render "share", user: @user, book: @book %>
   </div>

   <div class="col-md-8 offset-md-1">
<h1>Books</h1>

<body>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>

      <td>
        <%= link_to user_path(book.user) do %>
         <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %></td>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>

    </tr>
    <% end %>
  </tbody>
</table>

  </div>

  </div>
</div>

</body>